<h2>Templates</h2>
<div class="row" style="width=300px">
  <div class="col-md-6">
    <div class="list-group">
    <a href="#1" class="list-group-item" onclick="$('#templateActions').show()">Template 1</a>
    <a href="#2" class="list-group-item" onclick="$('#templateActions').show()">Template 2</a>
  </div>
  <button type="button" class="btn btn-default" onclick="location.href='/templateEditor'">Create New</button>
  </div>
  <div class="col-md-6" id="templateActions" style="display: none;">
    <div><textarea class="span6" rows="10"></textarea></div>
    <div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default" onclick="location.href='/templateEditor'">Edit</button>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#cloneTemplate">Clone</button>
    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteTemplate">Delete</button>
  </div>
  </div>
</div>

<div class="modal fade" id="cloneTemplate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Clone template</h4>
      </div>
      <div class="modal-body">
        <div>Name: <input type="text" value=""></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteTemplate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Confirm delete</h4>
      </div>
      <div class="modal-body">
        Are you sure you wish to delete this template?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Yes</button>
      </div>
    </div>
  </div>
</div>