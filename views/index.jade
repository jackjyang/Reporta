doctype html

html(ng-app="reporta")

  head
    meta(charset="utf8")
    base(href='/')
    title Reporta

  link(rel='stylesheet', href='css/bootstrap.min.css')
  link(rel='stylesheet', href='css/bootstrap-select.css')
  link(rel='stylesheet', href='css/bootstrap-select.min.css')

  nav.navbar.navbar-default.navbar-static-top
    .container
      .navbar-header
        a.navbar-brand(href="/") Reporta

      .navbar-nav.navbar-right.navbar-text
        div(ng-init='user = #{JSON.stringify(user)}; config = #{JSON.stringify(config)}')
          #{user.displayName}

  div(ng-controller='navController')
    .container
      .row
        .tabbable
          ul.nav.nav-pills.nav-stacked.col-md-2.h5#sidetabs
            li#dashboard
              a(href="dashboard", data-toggle="tab") Dashboard
            li#data_sources
              a(href="data_sources", data-toggle="tab") Data Sources
            li#templates
              a(href="templates", data-toggle="tab") Templates
            li#recipes
              a(href="recipes", data-toggle="tab") Recipes
            li#generate_report
              a(href="generate_report", data-toggle="tab") Generate Report

        .col-md-9(style='left:5px width:100%')#viewContainer
          div(ng-view)

script(src="js/angular.js")
script(src="js/angular-animate.js")
script(src="js/angular-route.js")
script(src="js/jquery-2.1.4.min.js")
script(src="js/bootstrap.min.js")
script(src="js/bootstrap-select.js")
script(src="js/bootstrap-select.min.js")
script(src="js/ui-bootstrap-tpls-0.13.2.min.js")
script(src="/ckeditor/ckeditor.js")
script(src="angular/routing.js")
script(src="angular/controllers/nav_controllers.js")
script(src="angular/controllers/data_source_controllers.js")
script(src="angular/controllers/data_sets_controllers.js")
script(src="angular/controllers/recipes_controllers.js")
script(src="angular/controllers/templates_controllers.js")
script(src="angular/controllers/generation_controllers.js")
script(src="https://rawgit.com/dotansimha/angularjs-dropdown-multiselect/master/src/angularjs-dropdown-multiselect.js")
script(src="http://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js")
